{
  "publisher": "antfu",
  "name": "pair-diff",
  "displayName": "Pair Diff",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "description": "Pair files for quick diffing.",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/vscode-pair-diff#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/antfu/vscode-pair-diff"
  },
  "bugs": {
    "url": "https://github.com/antfu/vscode-pair-diff/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/antfu"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.83.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Pair Diff",
      "properties": {
        "pair-diff.codeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable code lens"
        },
        "pair-diff.patterns": {
          "type": "array",
          "description": "Patterns for matching diff paris",
          "items": {
            "type": "object",
            "properties": {
              "source": [
                {
                  "type": "string",
                  "description": "The source pattern, support glob"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "The source pattern, support glob"
                }
              ],
              "target": [
                {
                  "type": "string",
                  "description": "The target path. TODO"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "The source pattern, support glob"
                }
              ]
            }
          }
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "pair-diff.available",
          "command": "pair-diff.open",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "pair-diff.open",
        "title": "Open Pair Diff",
        "icon": "$(diff)"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.1",
    "@antfu/ni": "^0.21.9",
    "@types/micromatch": "^4.0.5",
    "@types/node": "^20.9.0",
    "@types/vscode": "1.83.0",
    "@vscode/vsce": "^2.22.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.53.0",
    "esno": "^4.0.0",
    "micromatch": "^4.0.5",
    "pnpm": "^8.10.5",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
